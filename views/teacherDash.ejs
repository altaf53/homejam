<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Teacher Dashboard</title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/Article-List.css">
    <link rel="stylesheet" href="assets/css/styles.css">
</head>

<body>
    <%- include('index.ejs') %>
    <div class="article-list">
        <div class="container">
            <div class="intro">
                <h2 class="text-center">Your Classes</h2>
            </div>
            <div class="row articles">
                <% classes.forEach(function(clas) { %>
                    <% var updateclass = "/updateClass?classID=" + clas.id %>
                    <div class="col-sm-6 col-md-4 item"><a href= <%= updateclass %> ><img class="img-fluid" src="assets/img/desk.jpg"></a>
                        <h3 class="name"><%= clas.nameOfClass %></h3>
                        <p class="description"><%= clas.description %></p>
                        <i>Date : <%= clas.date %></i>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>